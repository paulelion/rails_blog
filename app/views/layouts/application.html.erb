<!DOCTYPE html>
<html>
  <head>
    <title>KiNG BLoG!</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  		<div id="sidebar">
  			 <div class="logo">
  				 <%= link_to root_path do %>
  					<%= image_tag "logo_k.png" %>
  				<% end %>
  			</div>

  			<ul>
  				<li class="category">KiNG BLoG</li>
  				<li><%= link_to "Blog", root_path %></li>
  				<li><%= link_to "About", about_path %></li>
  			</ul>

  			<ul>
  				<li class="category">Social</li>
  				<li><a href="https://www.facebook.com/paul.elion"></a>Facebook</li>
  				<li><a href="https://www.instagram.com/duke_elion/"></a>Instagram</li>
  				<li><a href="https://github.com/paulelion"></a>GitHub</li>
  				<li><a href="mailto:paul.j.elion@gmail.com"></a>Email</li>
  			</ul>

        <% if !user_signed_in? %>
  			<p class="sign_in">Admin Login</p>
        <% end %>
  		</div>

  		<div id="main_content">
  			<div id="header">
          <% if current_page?(root_path) %>
  				  <p>All Posts</p>
          <% elsif current_page?(about_path) %>
            <p>About</p>
          <% else %>
            <%= link_to "Back to All Posts", root_path %>
          <% end %>
  				
          <% if user_signed_in? %>
    				<div class="buttons">
    					<button class="button"><%= link_to "New Post", new_post_path %></button>
    					<button class="button">Log Out</button>
    				</div>
          <% end %>
  			</div>

  			<%= yield %>
  		</div>	


    

   
  
  </body>
</html>
