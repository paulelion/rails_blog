<!DOCTYPE html>
<html>
  <head>
    <title>KiNG BLOG!</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <link rel="shortcut icon" href="assets/logo_k-8d3b052b541580a96e5dc7a2814b47d214835b328a2c8274184f11f84363ec3e.png">
  <body>
  	<div id="sidebar">
  		<div class="logo">
  			<%= link_to root_path do %>
  				<%= image_tag "logo_k.png" %>
  			<% end %>
  		</div>

  		<ul>
  			<li class="category">KiNG BLOG</li>
  			<li><%= link_to "Blog", root_path %></li>
  			<li><%= link_to "About", about_path %></li>
  		</ul>

        <% if !user_signed_in? %>
  			<p class="sign_in">Admin Login</p>
        <% end %>
  	</div>

  	<div id="main_content">
  		<div id="header">

  			<% if user_signed_in? %>
  			<% else %>
  				<%= link_to "Log in", new_user_session_path %> &nbsp&nbsp
  				<%= link_to "Sign up", new_user_registration_path %> &nbsp&nbsp
  			<% end %>
  		
			<% if current_page?(root_path) %>
  				<p>All Posts</p>
          	<% elsif current_page?(about_path) %>
            	<p>About</p>
          	<% else %>
            	<%= link_to "Back to All Posts", root_path %>
          	<% end %>
  				
          	<% if user_signed_in? %>
    			<div class="buttons">
    				<button class="button"><%= link_to "New Post", new_post_path %></button>
    				<button class="button"><%= link_to("Log Out", destroy_user_session_path, method: :delete) %>ï»¿</button>
    			</div>
          	<% end %>
		</div>

  	<%= yield %>

  	</div>	
    
  
  </body>
</html>